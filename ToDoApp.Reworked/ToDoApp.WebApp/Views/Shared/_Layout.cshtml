<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - ToDoApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Tasks - Not Done", "NotDone", "Task")</li>
                <li>@Html.ActionLink("Tasks - In Progress", "InProgress", "Task")</li>
                <li>@Html.ActionLink("Tasks - Done", "Done", "Task")</li>
                <li>@Html.ActionLink("All Tasks", "GetAllTasks", "Task")</li>
            </ul>
        </nav>
    </header>
    <table>
        @RenderBody()
    </table>
    <footer>
        <p>&copy;ToDoApp</p>
        <p>All rights reserved</p>
    </footer>
    <script src="~/js/site.js"></script>
</body>
</html>
