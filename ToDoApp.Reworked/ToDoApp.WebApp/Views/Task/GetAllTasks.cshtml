@model AllTasksViewModel
@{
    ViewBag.Title = "All Tasks";
}

<h2>All tasks are:</h2> <br />

<table border="1" width="300" height="150">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tasks in Model.AllTasks)
        {
            <tr>
                <td>@tasks.Title</td>
                <td>@tasks.Description</td>
                <td>@tasks.Priority</td>
                <td>@tasks.Status</td>
                <td>@tasks.Type</td>
            </tr>
        }
    </tbody>
</table> <br />

<button>@Html.ActionLink("Add Task", "AddTask", "Task")</button>
