@model AddTaskViewModel
@{
    ViewBag.Title = "Add Task";
}

<h1>Add a Task</h1>

<p>Please enter the correct data to Add a task:</p>
@using (Html.BeginForm())
{
    <h3>Task info:</h3> <br />
    
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title)<br />

    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description)<br />

    @Html.LabelFor(x => x.Priority)
    @Html.DropDownListFor(x => x.Priority, Html.GetEnumSelectList(Model.Priority.GetType()))<br />

    @Html.LabelFor(x => x.Status)
    @Html.DropDownListFor(x => x.Status, Html.GetEnumSelectList(Model.Status.GetType()))<br />

    @Html.LabelFor(x => x.Type)
    @Html.DropDownListFor(x => x.Type, Html.GetEnumSelectList(Model.Type.GetType()))
    <br /><br />

    <button type="submit"> Add a Task </button>
}
