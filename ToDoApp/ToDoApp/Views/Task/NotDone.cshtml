@model NotDoneTasksViewModel
@{
    ViewBag.Title = "Tasks not done";
}

<table border="1" width="300" height="150">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var tasks in Model.NotDone)
            {
                <td>@tasks.Title</td>
                <td>@tasks.Description</td>
                <td>@tasks.Priority</td>
                <td>@tasks.Status</td>
                <td>@tasks.Type</td>
            }
        </tr>
    </tbody>
</table>

